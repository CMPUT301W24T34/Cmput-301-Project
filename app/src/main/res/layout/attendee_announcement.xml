<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFCFC">

    <!--TODO: Add view constraints - alignement to all the fields-->

    <TextView
        android:id="@+id/appName"
        android:layout_width="153dp"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="108dp"
        android:text="@string/swiftcheckin"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/switchMode"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/divider"
        android:layout_width="378dp"
        android:layout_height="1dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView1"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.helper.widget.Layer
        android:id="@+id/layer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <Switch
        android:id="@+id/switchMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="6dp"
        android:text="@string/mode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,UseSwitchCompatOrMaterialXml" />

    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="48dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_pic"
        tools:ignore="MissingConstraints" />


    <!--   TODO: Delete on of the posterImageView-->


    <ImageView
        android:id="@+id/eventPoster1"
        android:layout_width="296dp"
        android:layout_height="77dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/event_poster" />

    <TextView
        android:id="@+id/eventStartTime"
        android:layout_width="37dp"
        android:layout_height="18dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="29dp"
        android:text="02:00"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/eventPoster1" />

    <TextView
        android:id="@+id/timeDash"
        android:layout_width="4dp"
        android:layout_height="18dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="29dp"
        android:text="@string/dash"
        app:layout_constraintStart_toEndOf="@+id/eventStartTime"
        app:layout_constraintTop_toBottomOf="@+id/eventPoster1" />

    <ImageView
        android:id="@+id/calendarIcon"
        android:layout_width="21dp"
        android:layout_height="26dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventPoster1"
        app:srcCompat="@drawable/calendar" />

    <TextView
        android:id="@+id/eventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:text="@string/march_22_2023"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/calendarIcon"
        app:layout_constraintTop_toBottomOf="@+id/eventPoster1" />

    <TextView
        android:id="@+id/eventEndTime"
        android:layout_width="42dp"
        android:layout_height="18dp"
        android:layout_marginTop="29dp"
        android:text="@string/_03_00"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/timeDash"
        app:layout_constraintTop_toBottomOf="@+id/eventPoster1" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="23dp"
        android:layout_height="26dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toEndOf="@+id/eventDate"
        app:layout_constraintTop_toBottomOf="@+id/eventPoster1"
        app:srcCompat="@drawable/clock" />

    <TextView
        android:id="@+id/am_pm"
        android:layout_width="25dp"
        android:layout_height="18dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="208dp"
        android:text="@string/pm"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/eventEndTime"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <TextView
        android:id="@+id/eventName"
        android:layout_width="296dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="13dp"
        android:text="Event Name"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <TextView
        android:id="@+id/announcementHeader"
        android:layout_width="296dp"
        android:layout_height="24dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="14dp"
        android:text="@string/announcement"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/someImpAnncouncement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/someImpAnncouncement"
        android:layout_width="296dp"
        android:layout_height="24dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="420dp"
        android:text="@string/some_important_announcements"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="326dp"
        android:layout_height="377dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>