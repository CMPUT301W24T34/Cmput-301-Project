<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/organizerPageItem_eventName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event Name"
        android:background="#e0dfdc"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        />
    <ImageView
        android:id="@+id/organizerPageItem_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/organizerPageItem_eventName"
        android:src="@drawable/test_rect" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/organizerPageItem_image"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/organizerPageItem_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:textAlignment="center"
            android:text="Date"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/organizerPageItem_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:textAlignment="center"
            android:text="Time"
            android:textSize="15sp"
            android:textStyle="bold"
            />
    </LinearLayout>


</RelativeLayout>