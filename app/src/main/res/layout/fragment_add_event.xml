<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/edit_event_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Title"/>
    <EditText
        android:id="@+id/edit_event_location_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Location"/>

<!--    <EditText-->
<!--        android:id="@+id/edit_max_attendees_text"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:ems="10"-->
<!--        android:inputType="text"-->
<!--        android:hint="Maximum Attendees"/>-->
    <EditText
        android:id="@+id/edit_event_description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Description"
        android:inputType="text" />

    <EditText
        android:id="@+id/edit_event_date"
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:ems="10"
        android:text="TextView"
        android:inputType="text"/>

    <EditText
        android:id="@+id/edit_event_start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="TextView"
        android:inputType="text"/>

    <EditText
        android:id="@+id/edit_event_end_Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="TextView"
        android:inputType="text"/>

    <EditText
        android:id="@+id/edit_am_pm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="TextView"
        android:inputType="text"/>

</LinearLayout>